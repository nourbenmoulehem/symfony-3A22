{% extends 'base.html.twig' %}

{% block title %}Modifier l'auteur {name} {% endblock %}

{% block content %}

<form action="{{ path('author.update', { 'name': name, 'email': email, 'id': id }) }}" method='POST' class="form-horizontal">
  <div class="form-group" style="margin-bottom: 20px;">
    <label for="name" class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="name" name="name" value="{{name}}" placeholder="Enter name">
    </div>
  </div>
  <div class="form-group" style="margin-bottom: 20px;">
    <label for="email" class="col-sm-2 control-label">Email</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" value="{{email}}" id="email" name="email" placeholder="Enter email">
    </div>
  </div>
  <div class="form-group" style="margin-bottom: 20px;">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">Modifier</button>
    </div>
  </div>
</form>

{% for message in app.flashes('success') %}
    <div class="alert alert-success" role="alert">
        {{ message }}
    </div>
{% endfor %}

{% endblock %}